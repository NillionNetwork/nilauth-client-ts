  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@nillion/nuc": "link:../nuc-ts",
    "@types/node": "^24.10.1",
    "pino": "^10.1.0",
    "tsdown": "^0.16.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.22.0",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "tsdown": {
    "entry": "./src/lib.ts",
    "format": "esm",
    "clean": true,
